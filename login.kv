#:import sp kivy.metrics.sp
#:import dp kivy.metrics.dp
<SelectionBottomMenu>:
	id: selection_row
    md_bg_color: app.main_clr
    height:"145dp"
    size_hint: 1,None
    MDRelativeLayout:
		Button:
        	id: create_album
        	background_normal: "./icons/album60.png"
        	size_hint: (None,None)
        	size: (60,60)
        	pos_hint: {'center_x':0.5, 'center_y':0.75}
            on_release: root.create_album()

    MDRelativeLayout:
    	Button:
        	id: delete_selected
        	size_hint: (None,None)
        	pos_hint: {'center_x':0.5, 'center_y':0.75}
        	size: (60,60)
        	background_normal: "./icons/bin60.png"
            on_release: root.delete_selected()

    MDRelativeLayout:
		Button:
        	id: close_menu
        	size_hint: (None,None)
        	pos_hint: {'center_x':0.5, 'center_y':0.75}
        	size: (60,60)
        	background_normal: "./icons/x60.png"
            on_release: root.close_selection()



<AudioInfo>:
	id: audio_row
	orientation: 'vertical'
    height:"105dp"
    size_hint: .96,None

	MDBoxLayout:
		height:"100dp"
        canvas.before:
            Color:
                rgba: app.main_clr2
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [22,]

            Color:
                rgba: app.main_clr
            Line:
                width: 1.5
                rounded_rectangle: (self.x, self.y, self.width, self.height, 22)

        MDRelativeLayout:
            size: ("100dp", "100dp")
            size_hint: (None,None)
		    Button:
                id: action
        	    background_color: 0,0,0,0

            Image:
                id: song_status
                size: ("80dp", "80dp")
                size_hint: (None,None)
                source: "./icons/play.png"
                pos_hint: {'center_x':0.5, 'center_y':0.5}


        Ticker:
            id: ticker
            data: {'text': "Artist - song", 'font_size':'20sp'}
            divider: 30
            fit_size: True

            Button:
                id: song_name
                on_release: app.screen_container.open_screen()
                background_color: 0,0,0,0
                    
			
		Button:
			id: song_timer
			on_press: app.screen_container.open_screen()
			size_hint: None,None
			background_color: 0,0,0,0
			size: "70dp","100dp"
			text: "00:00"
            font_size: '20sp'
			haling: "right"
            canvas.before:

                Color:
                    rgba: (0,0,0,0)  # visual feedback of press

                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0,22,22,0]
                Color:
                    rgba: app.main_clr
                Line:
                    width: 1.5
                    points: self.pos[0],self.pos[1],self.pos[0],self.pos[1]+self.height

	MDProgressBar:
		id: song_progress
		size_hint_y:None
		height:"5dp"
		max: 1
		value: 1

<Album>
	MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: app.load_clr

            Rectangle:
                pos: self.pos
                size: self.size
        MDRelativeLayout:
            id: menu_row
            orientation: "vertical"
            size: (root.size[0],"100dp")
            size_hint: (None,None)
            pos_hint: {'center_x':0.5, 'center_y':0.95}
            md_bg_color: app.main_clr

        MDBoxLayout:
            UpdatableScrollView:
                id: scrollable_container
                #hide_animation_up: app.upper_anim
                #hide_animation_down: app.bottom_anim
                load_sign_up: app.ls_up_album
                load_sign_down: app.ls_down_album
                overscroll_up_callback: (root.force_screen_update,(),{})
                overscroll_down_callback: (root.load_more,(),{})
            	MDBoxLayout:
            		orientation: "vertical"
            		size_hint: 1, None
            		height: self.minimum_height
                    MDBoxLayout:
                        size_hint: (1,None)
                        height: "10dp"

                        canvas.before:

                            Color:
                                rgba: (0,0,0,1)

                            Rectangle:
                                pos: self.pos
                                size: self.size
                    MDBoxLayout:
                        size_hint: (1,None)
                        height: "160dp"
                        MDBoxLayout:
                            md_bg_color: app.main_clr2
                            orientation: "vertical"
                            MDLabel:
                                id: album_name
                                text: ""
                                font_size: '25sp'
                                padding: "25dp"
                            MDLabel:
                                id: count
                                text: str(0) + " track in album"
                                font_size: '14sp'
                                padding: "35dp"

            		    AsyncImage:
        				    id: album_image
            			    size_hint: (None,None)
            			    size: "160dp","160dp"

                    MDBoxLayout:
                        size_hint: (1,None)
                        height: "10dp"

                        canvas.before:

                            Color:
                                rgba: (0,0,0,1)

                            Rectangle:
                                pos: self.pos
                                size: self.size

                	MDList:
                    	adaptive_height: True
                    	id: container



<AlbumList>
