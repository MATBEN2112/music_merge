                RelativeLayout:
                    size: ("50dp","50dp")
                    size_hint: (None,None)

                    Image:
                        id: ya
                        size: ("50dp","50dp")
                        size_hint: (None,None)
                        source:  "./icons/ya.png"
                        pos_hint: {'center_x':0.5, 'center_y':0.5}

                    Button:

                        size: ("50dp","50dp")
